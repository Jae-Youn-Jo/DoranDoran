            android:text="처가"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#d62121"
            android:gravity="center"/>

        <TextView
            android:text="외가"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8eff74"
            android:gravity="center"/>
        <TextView
            android:text="처외가"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4f6df4"
            android:gravity="center"/>
    </LinearLayout>


